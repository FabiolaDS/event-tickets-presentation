@page "/sign-up"
@using eventTicketPesentation.Shared.Components.NavMenu
<NavMenu ShowLogin="true"></NavMenu>
<section class="section">
    <form>
        <h1>Sign Up</h1>
        <div class="form__group">
            <label >Email address</label>
            <input type="email" placeholder="email"/>
        </div>
        <div class="form__inputs">
            <div class="form__group form__group_half">
                <label >First Name</label>
                <input type="text" placeholder="first name"/>
            </div>

            <div class="form__group form__group_half">
                <label >Last Name</label>
                <input type="text" placeholder="last name"/>
            </div>
        </div>
        <div class="form__inputs">
            <div class="form__group form__group_half">
                <label >Address</label>
                <input type="text" placeholder="Address"/>
            </div>

            <div class="form__group form__group_half">
                <label >Zip Code</label>
                <input type="text" placeholder="zip code"/>
            </div>
        </div>
        <div class="form__inputs">
            <div class="form__group form__group_half">
                <label >Country</label>
                <input type="text" placeholder="country"/>
            </div>

            <div class="form__group form__group_half">
                <label >Town</label>
                <input type="text" placeholder="town"/>
            </div>
        </div>
        <div class="form__group">
            <label >Password</label>
            <input type="password" placeholder="password"/>
        </div>
        <button class="form__button-register">Sign Up</button>
        <div class="auth__redirect">
            <p class="auth__paragraph">Already have an account?</p>
            <a href="/login" class="auth__link">
                Login
            </a>
        </div>
    </form>
</section>

